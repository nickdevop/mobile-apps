<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorbackground"
    android:gravity="center"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/browse"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@color/purple_200"
            android:hint="http://  "
            android:textColorHint="@android:color/black"

            />

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:rotationX="17"
            android:rotationY="-25"
            android:shadowColor="@color/design_default_color_error"
            android:text="Search"
            android:textColorHint="#978B8B" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/pno"
            android:inputType="number"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@color/purple_200"
            android:hint=" phone no."
            android:textColorHint="@android:color/black"

            />

        <Button
            android:id="@+id/psearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:rotation="4"
            android:rotationX="12"

            android:rotationY="-33"
            android:shadowColor="@color/design_default_color_error"
            android:text="Dial" />


    </LinearLayout>

    <Button
        android:id="@+id/sweetmssg"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:rotation="-8"
        android:rotationX="-25"
        android:rotationY="-25"
        android:shadowColor="@color/design_default_color_error"
        android:text="message" />

</LinearLayout>